generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model classroom {
  id         Int       @id @default(autoincrement()) @db.UnsignedInt
  grade      Int       @db.UnsignedTinyInt
  prom       Int       @db.UnsignedTinyInt
  created_at DateTime? @default(now()) @db.DateTime(8)
  updated_at DateTime? @default(now()) @db.DateTime(8)
  user       user[]
}

model user {
  id          Int          @id @default(autoincrement()) @db.UnsignedInt
  firstName   String       @db.VarChar(20)
  lastName    String       @db.VarChar(20)
  number      String       @db.VarChar(32)
  classroomId Int          @db.UnsignedInt
  created_at  DateTime?    @default(now()) @db.DateTime(8)
  updated_at  DateTime?    @default(now()) @db.DateTime(8)
  parent_info parent_info? @relation(fields: [id], references: [user_id])
  classroom   classroom    @relation(fields: [classroomId], references: [id])

  @@index([number], map: "idx_number")
}

model parent_info {
  id         Int       @id @default(autoincrement()) @db.UnsignedInt
  username   String    @db.VarChar(20)
  tel        String    @db.VarChar(20)
  created_at DateTime? @default(now()) @db.DateTime(8)
  updated_at DateTime? @default(now()) @db.DateTime(8)
  user_id    Int       @db.UnsignedInt

  user user[]
  @@index([user_id], map: "idx_user_id")
}
